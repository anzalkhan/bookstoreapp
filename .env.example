# ============================================
# DATABASE CONFIGURATION
# ============================================
# MySQL database connection settings

# Database host (use 'localhost' for local development)
DB_HOST=localhost

# MySQL port (default is 3306)
DB_PORT=3306

# MySQL username (commonly 'root' for local development)
DB_USER=root

# MySQL password for the user
# Leave empty if no password is set, otherwise enter your MySQL password
DB_PASSWORD=

# Database name (must be created before running init_db.py)
DB_NAME=bookstore


# ============================================
# FLASK CONFIGURATION
# ============================================

# Secret key for session encryption and security
# IMPORTANT: Change this to a random string for production!
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this-to-random-string

# Flask environment (development or production)
FLASK_ENV=development


# ============================================
# EMAIL CONFIGURATION
# ============================================
# Settings for sending order confirmation emails via SMTP
# For Gmail, you need to generate an App Password (not your regular password)
# Steps: Google Account > Security > 2-Step Verification > App passwords

# SMTP server address (Gmail: smtp.gmail.com, Outlook: smtp-mail.outlook.com)
SMTP_SERVER=smtp.gmail.com

# SMTP port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# Your email address (the account sending emails)
SMTP_USERNAME=your_email@gmail.com

# Email password or App Password
# For Gmail: Use App Password from Google Account settings
# For other providers: Use your email password or app-specific password
SMTP_PASSWORD=your_gmail_app_password_here

# The "from" address shown in emails (usually same as SMTP_USERNAME)
SENDER_EMAIL=your_email@gmail.com